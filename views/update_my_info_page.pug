doctype html
html
    head
        meta(charset='utf-8' name='viewport' content='width=device-width', initial-scale='1.0')
        title 내 정보 수정
        style
            include style.css
        script(src='/friend_list.js') 
    body
        div(id='container' class='main_container')
            div(style='padding: 20px;')
            div(class='login_container')
                div(class='form_container')
                    form(name='update_my_info_form' action='/updateMyInfo' method='post')
                        div(style='height: 10px;')
                        img(src='/images/logo.jpg' alt='logo title' class='form_logo_title_div' width='300')
                        button(type='button' class='form_back_button' value=`${my_name}` onclick='goToMyPage(value)' style='float: left;')
                            svg(xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16")
                                path(fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z")
                        br
                        br
                        br
                        div
                            div
                                a(class='form_item_name') Name
                            div(style='height: 3px;')
                            div
                                input(type='text' name='name' value=my_name placeholder='Enter name' class='form_input')
                            div(class='form_text_alert_padding')
                        div
                            div
                                a(class='form_item_name') Introduction
                            div(style='height: 3px;')
                            div
                                input(type='text' name='intro' value=my_intro placeholder='Write self-introduction' class='form_input')
                            div(class='form_text_alert_padding')
                        br
                        div
                            input(type='submit' class='form_button' value="수정")
                            div(style='height: 5px;')
                            input(type='reset' class='form_button' value="처음 상태로")