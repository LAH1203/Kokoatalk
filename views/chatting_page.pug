doctype html
html
    head
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(charset='utf-8' name='viewport' content='width=device-width', initial-scale='1.0')
        title Chatting
        style
            include style.css
        script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.1/socket.io.js')
        -//script(src='/socket.io/socket.io.js') 
        -//script(src='/chatting.js') 
    body
        div(id='container' class='main_container')
            div(style='padding: 20px;')
            div(class='login_container')
                div(class='form_container')
                    -/*
                    form(name='chatting_form' action='/chatting' method='get')
                        div(style='height: 10px;')
                        center
                            div(class='form_title_p' data-role='header') 채팅
                        br
                        br
                        div(class='chatting')
                        input(type='text' id='chat' placeholder='메시지 입력')
                        button(onclick='send()') 전송
                    -*/
                    div(style='height: 10px;')
                    center
                        form(name='chatting_form_2' onsubmit='return false')
                            div(class='wrapper')
                                button(type='button' class='form_back_button' style='float: left;' onclick="location.href='/friendList'")
                                    svg(xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16")
                                        path(fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z")
                                label 친구 이름 
                                input(type='text' id='nickname' value=`${friend_name}` readonly)
                                div(style='height: 5px;')
                                div(id='display_container' style='overflow: scroll; width: 300px; height: 440px;')
                                    ul(id='chat_list' style='list-style: none; padding-left: 0px;')
                                div(style='height: 5px;')
                                div(id='input_container')
                                    input(type='text' id='chat_input' name=`${my_name}` onKeyPress='if(event.keyCode==13){send(name);}')
                                    button(type='button' id='send_button' name=`${my_name}` onclick='send(name)') 전송
        script(src='/chatting.js')