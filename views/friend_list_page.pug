doctype html
html
    head
        meta(charset='utf-8' name='viewport' content='width=device-width', initial-scale='1.0')
        title Friend List
        style
            include style.css
        script(src='/friend_list.js')
    body
        div(id='container' class='main_container')
            div(style='padding: 20px;')
            div(class='login_container')
                div(class='form_container')
                    form(name='friend_list_form' action='/process/friendList' method='get')
                        div(style='height: 10px;')
                        -// 책 330쪽 참고
                        div(class='form_title_p' data-role='header') 친구 목록
                        br
                        br
                        div(data-role='content')
                            ul(data-role='listview')
                                -for (friend in friend_list)
                                    li
                                        a(onclick='startChatting()')= friend_list[friend]
                        div
                            button(type='button' class='form_button' onclick="location.href='/addFriend'") 친구 추가