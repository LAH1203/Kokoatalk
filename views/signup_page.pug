doctype html
html
    head
        meta(charset='utf-8' name='viewport' content='width=device-width', initial-scale='1.0')
        title Login
        style
            include style.css
        script(src='/signup.js')
    body
        div(id='container' class='main_container')
            div(style='padding: 20px;')
            div(class='login_container')
                div(class='form_container')
                    form(name='signup_form' action='/signup' method='post')
                        div(style='height: 10px;')
                        img(src='/images/logo.jpg' alt='logo title' class='form_logo_title_div' width='300')
                        div
                            div
                                a(class='form_item_name') Email
                            div(style='height: 3px;')
                            div
                                input(type='email' name='email' placeholder='Enter e-mail' class='form_input')
                            div(class='form_text_alert_padding')
                                -//div(style='height: 4px;')
                        div
                            div
                                a(class='form_item_name') Password
                            div(style='height: 3px;')
                            div
                                input(type='password' name='password' placeholder='Enter password' class='form_input')
                            div(class='form_text_alert_padding')
                                -//div(style='height: 4px;')
                        div
                            div
                                a(class='form_item_name') Name
                            div(style='height: 3px;')
                            div
                                input(type='text' name='name' placeholder='Enter name' class='form_input')
                            div(class='form_text_alert_padding')
                                -//div(style='height: 4px;')
                        div
                            div
                                a(class='form_item_name') Introduction
                            div(style='height: 3px;')
                            div
                                input(type='text' name='intro' placeholder='Write self-introduction' class='form_input')
                            div(class='form_text_alert_padding')
                                -//div(style='height: 4px;')
                        div(style='height: 10px;')
                        div
                            button(type='submit' class='form_button') 회원가입